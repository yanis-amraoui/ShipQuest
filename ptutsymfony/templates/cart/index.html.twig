{% extends 'base.html.twig' %}

{% block title %}Panier Vide !
{% endblock %}

{% block body %}
    <header id="head" class="secondary"></header>
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('product_index') }}">Boutique</a></li>
            <li class="active">Panier</li>
        </ol>
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

        {% if items | length > 0 %}
            <table class="table">
                <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prixx</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.title }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{ path('cart_remove', {'id' : item.product.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3" class="text-right ">Total : </td>
                    <td>{{ total }}</td>
                    <td>
                        <a href="{{ path('cart_checkout') }}" class="btn btn-success">Valider</a>
                    </td>

                </tr>
                </tfoot>
            </table>
        {% else %}
            <p>Le panier est vide !</p>
        {% endif %}

    </div>
{% endblock %}